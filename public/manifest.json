{
    "manifest_version": 2,
    "name": "AR-Desktop",
    "version": "1.0",
    "description": "Watch your browser in augmented-reality. ",
    "_content_security_policy": "script-src 'self' https://unpkg.com 'unsafe-inline' 'unsafe-eval'; object-src 'self'",
    "content_security_policy": "script-src 'self' https://unpkg.com 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_title": "ðŸ”´ start/stop XR-View ðŸ‘“",
        "off_default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "desktopCapture",
        "activeTab",
        "tabCapture",
        "<all_urls>"
    ]
}